   <sql id="findWhere">
   <where>
      <if test="user.userId!=null and user.userId!='' ">
        and user_id=#{user.userId}
      </if>
      <if test="user.userrNo!=null and user.userrNo!='' ">
        and userr_no=#{user.userrNo}
      </if>
      <if test="user.userrSort!=null and user.userrSort!='' ">
